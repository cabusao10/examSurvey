<Page x:Class="examSurvey.QuestionTypes.pTextbox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:examSurvey.QuestionTypes"
      mc:Ignorable="d" 
      x:Name="ptextbox"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pTextbox">

    <Grid x:Name="maingrid"> 
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="82" Margin="41,21,0,0" TextWrapping="Wrap" Text="{Binding ElementName=ptextbox,Path=Answer,Mode=TwoWay}" VerticalAlignment="Top" Width="722"
                 
                 KeyDown="TextBox_KeyDown"/>

    </Grid>
</Page>
