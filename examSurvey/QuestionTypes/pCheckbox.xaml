        <CheckBox x:Name="opt5" Content="{Binding ElementName=pcheckbox,Path=Option5,Mode=TwoWay}" HorizontalAlignment="Left" Margin="45,182,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="opt6" Content="{Binding ElementName=pcheckbox,Path=Option6,Mode=TwoWay}" HorizontalAlignment="Left" Margin="45,202,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="opt7" Content="{Binding ElementName=pcheckbox,Path=Option7,Mode=TwoWay}" HorizontalAlignment="Left" Margin="45,103,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="opt8" Content="{Binding ElementName=pcheckbox,Path=Option8,Mode=TwoWay}" HorizontalAlignment="Left" Margin="45,123,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="opt9" Content="{Binding ElementName=pcheckbox,Path=Option9,Mode=TwoWay}" HorizontalAlignment="Left" Margin="45,143,0,0" VerticalAlignment="Top"/>


    </Grid>
</Page>
