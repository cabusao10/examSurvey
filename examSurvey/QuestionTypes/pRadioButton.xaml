<Page x:Class="examSurvey.QuestionTypes.pRadioButton"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:examSurvey.QuestionTypes"
      mc:Ignorable="d" 
      x:Name="pradio"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pRadioButton">

    <Grid >
        <RadioButton x:Name="option1" Content="{Binding Path=Option1, ElementName=pradio,Mode=TwoWay}" FontSize="18" HorizontalAlignment="Left" Margin="25,28,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="option2" Content="{Binding Path=Option2 , ElementName=pradio,Mode=TwoWay}" FontSize="18" HorizontalAlignment="Left" Margin="410,28,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
